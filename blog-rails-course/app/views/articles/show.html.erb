<h1><%= @article.title %></h1>
<div>
    Escrito por <strong><%= @article.user.email %></strong>
    <% if current_user.avatar.attached? %>
        <%= image_tag url_for(current_user.avatar),  height: 50 , width: 50 %>
    <% end %>
</div>

<div>
    <%= @article.content %>
</div>

<div class="mt-5">
    <p>Tags:</p>
    <% @article.categories.each do | category | %>
        <p style="background-color: <%= category.color %>">
            <span><%= link_to category.title, category, class: "text-white" %></span>
        </p>
    <% end %>
</div>

<div>
    <%# <%= link_to "Delete article", @article, method: :delete, data: { confirm: "Are you sure?" }, turbo: false %>
    <%= button_to "Delete article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to "Edit article", edit_article_path, class: "p-3 bg-conic-270" %>
</div>